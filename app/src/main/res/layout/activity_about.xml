<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="com.rhinepereira.saints.AboutActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@mipmap/ic_launcher_foreground"/>
    <TextView
        android:id="@+id/tvappversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Application Version 1.1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:id="@+id/tvauthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="italic"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Â© 2023 Rhine Pereira" />

       <Button android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginTop="16dp"
               android:id="@+id/insta"
               android:layout_gravity="top"
               android:layout_marginLeft="10dp"
               android:layout_marginBottom="5dp"
       android:background="@drawable/insta_icon">

       </Button>

    </LinearLayout>

    <TextView
        android:id="@+id/grace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Grace Pereira" />
    <TextView
        android:id="@+id/chachu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Asim Pereira" />
</LinearLayout>
