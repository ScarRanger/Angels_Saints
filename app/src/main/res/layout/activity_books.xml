<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:context="com.rhinepereira.saints.BooksActivity">

        <TextView
                android:id="@+id/tvOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:textColor="@color/red"
                android:text="@string/old"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ListView
                android:layout_below="@id/tvOld"
                android:id="@+id/lstBooksOld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvNew"
                android:layout_below="@id/lstBooksOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textColor="@color/darkBlue"
                android:layout_centerHorizontal="true"
                android:text="@string/testament"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ListView
                android:layout_below="@id/tvNew"
                android:id="@+id/lstBooksNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</ScrollView>